<odoo>
  <data>
    <record id="actividades_view_tree" model="ir.ui.view">
        <field name="name">actividades.view.tree</field>
        <field name="model">actividades</field>
        <field name="arch" type="xml">
            <tree string="Actividades">
                <field name="name" string="Resumen" required="True"/>
                <field name="ticket" string="Ticket"/>
                <field name="partner_id" string="Partner" required="True"/>
                <field name="case_id"/>
                <field name="project_id" />
                <field name="task_id" />
                <field name="cliente" />
                <field name="descripcion" />
                <field name="fecha_vencimiento" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="actividades_view_form" model="ir.ui.view">
        <field name="name">actividades.view.form</field>
        <field name="model">actividades</field>
        <field name="arch" type="xml">
            <form string="Actividades Pendientes">
                <header>
                    <field name="state" widget="statusbar" options="{'clickable': '1'}"/>
                </header>
                    <sheet>
                        <group string="Resumen" >
                                <field name="name" nolabel ="1" required="True" colspan="2"/>
                        </group>
                        <group string="Datos">
                            <group>
                                <field name="partner_id" string="Partner" required="True"/>
                            </group>
                            <group>
                                <field name="fecha_vencimiento"/>
                            </group>
                            <group>
                                <field name="cliente"/>
                            </group>
                        </group>
                        
                        <group string="Relaciones">
                            <group>
                                <field name="ticket" string="Ticket" colspan="2"/>
                                <field name="case_id" colspan="2"/>
                            </group>
                            <group>
                                <field name="project_id" colspan="2"/>
                                <field name="task_id" colspan="2"/>
                            </group>
                        </group>
                        <group string="DescripciÃ³n">
                            <field name="descripcion" nolabel="1" colspan="2"/>
                        </group>
                    </sheet>
            </form>
        </field>
    </record>

    <record id="action_actividades_pendientes" model="ir.actions.act_window">
        <field name="name">Actividades Pendientes</field>
        <field name="res_model">actividades</field> 
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="actividades_view_tree"/>
        <field name="domain">[('state','<','3')]</field>
    </record>

    <record id="action_actividades_finalizadas" model="ir.actions.act_window">
        <field name="name">Actividades Finalizadas</field>
        <field name="res_model">actividades</field> 
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="actividades_view_tree"/>
        <field name="domain">[('state','=','3')]</field>
    </record>

    </data>
</odoo>